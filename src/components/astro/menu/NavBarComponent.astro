---
import AuthComponent from "../../solid/auth/AuthComponent";
import menuBurger from "../../../assets/icons/menuBurger.svg";
---

<div>
  <div class="nav-bar">
    <div class="top">
      <img src={menuBurger} alt="menu burger" />
    </div>
    <div class="bottom">
      <AuthComponent client:load />
    </div>
  </div>
</div>

<style lang="scss">
  .nav-bar {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    width: 60px;
    height: 100vh;
    background-color: #555;

    & .top {
      & > * {
        width: 80%;
        margin: auto;
      }
    }
  }
</style>
